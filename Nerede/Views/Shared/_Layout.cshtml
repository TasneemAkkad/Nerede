<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAPrWmU7limxbHv9-8t9QCZnHhMZulW7to&sensor=true"></script>
    <script src="~/Scripts/Site.js"></script>
</head>
<body>
    <div class="container">
        <div class="jumbotron text-center" style="margin-bottom:0">

            <a href="/Kullanici/Anasayfa"><img class="logo" src="https://i.hizliresim.com/iBBqwJ.png" /></a>
            <br>
            <img class="subLogo" src="https://i.hizliresim.com/QjDdRq.png" width="300px" alt="Web Sitesi Alt Logo" />
            <br>
            
        </div>
        <nav class="navbar navbar-expand-md bg-darkRed navbar-dark">
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Kullanici/Giris">Adresimi Güncelle</a>
                    </li>
                </ul>
                    <div class="form-inline flex-fill input-group my-2 my-sm-0 mr-3">
                        <input id="productSearch" class="form-control flex-fill" type="search" placeholder="Ürün Ara" aria-label="Search">
                        <div class="input-group-append">
                            <button id="searchButton" class="btn btn-outline-danger font-weight-bold" onclick="dos()" > Nerede Acaba</button>
                        </div>
                    </div>
                    <button class="btn btn-outline-danger my-2 my-sm-0 font-weight-bold" onclick="window.location.href='/dukkan/stoklar'">Dükkan Girişi</button>
            </div>
        </nav>

        <div class="jumbotron">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
        

</body>
</html>