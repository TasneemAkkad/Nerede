@using Nerede.Models.Tables;

@{
    ViewBag.Title = "yeniDukkan";
    Layout = "~/Views/Shared/_LayoutOut.cshtml";

}

<h2>Yeni Dükkan</h2>
<hr />
<div class="row">
    <div class="col">
        <h3>NEREDESİN</h3>
    </div>
    <div class="col">
        <button style="float: right;" class="btn btn-outline-danger font-weight-bold" type="button" onclick="currentLoc()">Beni Bul</button>
    </div>
</div>
<div id="map-canvas" style="width:100%; height:300px; ">
    <script type="text/javascript">initMap();</script>
</div>
<form method="post" class="needs-validation" novalidate>
    <input type="text" name="xKoordinat" style="height:1px;width:1px;" class="form-control invisible" id="xKoordinat" />
    <input type="text" name="yKoordinat" style="height:1px;width:1px;" class="form-control invisible" id="yKoordinat" />
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Dükkan Adı</span>
        </div>
        <input type="text" name="dukkanAdi" class="form-control" placeholder="Dükkan Adı" required />
        <div class="invalid-feedback">Lütfen Kullanıcı Adi Giriniz.</div>
    </div>
    @ViewData["hata"]
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Kullanıcı Adı</span>
        </div>
        <input type="text" name="kullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required />
        <div class="invalid-feedback">Lütfen Kullanıcı Adi Giriniz.</div>
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Şifre</span>
        </div>
        <input type="password" name="sifre" class="form-control" placeholder="Şifre" required />
        <div class="invalid-feedback">Lütfen Şifre Giriniz.</div>
    </div>
    <input type="submit" value="Yeni Dükkan Ekle" class="btn btn-outline-danger font-weight-bold " id="Send" onclick="getLocation()" />
</form>


<script>
    (function () {
        'use strict';
        $("document").ready(function () {
            var forms = $('.needs-validation').get();
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    $(".needs-validation").addClass('was-validated');
                }, false);
            });
        });
    })();
</script>
